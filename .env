
# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-should-be-changed-in-production

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes

# API URL Configuration
VITE_API_BASE_URL=/api

# Database Configuration - replace these with your cPanel database credentials
DB_HOST=localhost
DB_USER=dbuser
DB_PASSWORD=dbpassword
DB_DATABASE=mydatabase
DB_PORT=3306

# Set to false in production
ALLOW_DB_FAIL=false

# cPanel specific settings
# Set this to your specific cPanel domain when deploying
# VITE_PUBLIC_URL=https://your-domain.com
